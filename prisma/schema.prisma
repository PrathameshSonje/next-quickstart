generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  username     String        @unique
  email        String
  profile      Profile?
  subscription Subscription?
}

// if you want to create a public profile for users
model Profile {
  id   String @id @default(cuid())
  uid  String @unique
  user User   @relation(fields: [uid], references: [id])
}

model Subscription {
  id      String   @id @default(cuid())
  uid     String   @unique
  user    User     @relation(fields: [uid], references: [id])
  created DateTime @default(now())
  expires DateTime
}
